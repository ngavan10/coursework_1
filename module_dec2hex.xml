<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dec2hex" default="compile.module.dec2hex">
  <dirname property="module.dec2hex.basedir" file="${ant.file.module_dec2hex}"/>
  
  <property name="module.jdk.home.dec2hex" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dec2hex" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dec2hex" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dec2hex" value="-encoding UTF-8 -source 13 -target 13 ${compiler.args}"/>
  
  <property name="dec2hex.output.dir" value="${module.dec2hex.basedir}/out/production/Dec2Hex"/>
  <property name="dec2hex.testoutput.dir" value="${module.dec2hex.basedir}/out/test/Dec2Hex"/>
  
  <path id="dec2hex.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dec2hex.module.production.classpath">
    <path refid="${module.jdk.classpath.dec2hex}"/>
  </path>
  
  <path id="dec2hex.runtime.production.module.classpath">
    <pathelement location="${dec2hex.output.dir}"/>
  </path>
  
  <path id="dec2hex.module.classpath">
    <path refid="${module.jdk.classpath.dec2hex}"/>
    <pathelement location="${dec2hex.output.dir}"/>
  </path>
  
  <path id="dec2hex.runtime.module.classpath">
    <pathelement location="${dec2hex.testoutput.dir}"/>
    <pathelement location="${dec2hex.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.dec2hex">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dec2hex">
    <patternset refid="excluded.from.module.dec2hex"/>
  </patternset>
  
  <path id="dec2hex.module.sourcepath">
    <dirset dir="${module.dec2hex.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dec2hex" depends="compile.module.dec2hex.production,compile.module.dec2hex.tests" description="Compile module Dec2Hex"/>
  
  <target name="compile.module.dec2hex.production" depends="register.custom.compilers" description="Compile module Dec2Hex; production classes">
    <mkdir dir="${dec2hex.output.dir}"/>
    <javac2 destdir="${dec2hex.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dec2hex}/javac">
      <compilerarg line="${compiler.args.dec2hex}"/>
      <bootclasspath refid="dec2hex.module.bootclasspath"/>
      <classpath refid="dec2hex.module.production.classpath"/>
      <src refid="dec2hex.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dec2hex"/>
    </javac2>
    
    <copy todir="${dec2hex.output.dir}">
      <fileset dir="${module.dec2hex.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dec2hex.tests" depends="register.custom.compilers,compile.module.dec2hex.production" description="compile module Dec2Hex; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dec2hex" description="cleanup module">
    <delete dir="${dec2hex.output.dir}"/>
    <delete dir="${dec2hex.testoutput.dir}"/>
  </target>
</project>